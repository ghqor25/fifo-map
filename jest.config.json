{
   "collectCoverage": true,
   "collectCoverageFrom": ["src/**/*"],
   "coverageDirectory": "<rootDir>/jest-reports/coverage",
   "coverageReporters": ["text"],
   "coverageProvider": "v8",
   "coverageThreshold": {
      "global": {
         "branches": 0,
         "functions": 0,
         "lines": 0,
         "statements": 0
      }
   },
   "preset": "ts-jest/presets/default-esm",
   "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
   },
   "transform": {
      "^.+\\.tsx?$": [
         "ts-jest",
         {
            "isolatedModules": true,
            "useESM": true
         }
      ]
   },
   "testEnvironment": "node"
}
